{% extends 'proprietaire/base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}

<div class="container">
        <div class="row">
          <div class="col-md-5 mr-auto">
            <div class="border text-center">
              <img src={{ asset('images/' ~ products.image) }} alt="Image" class="img-fluid p-5">
            </div>
          </div>
          <div class="col-md-6">
            <h2 class="text-black">{{ products.nom }}</h2>
            <p>{{ products.description }}</p>
            
            <p>Prix HT :<strong class="text-primary h4">{{ products.prixHt }} dh</strong></p>
            <p>Prix TVA :<strong class="text-primary h4">{{ products.prixTva }} dh</strong></p>
            <p>Date d'expiration :<strong class="text-primary h4">{{ products.dateExpiration ? products.dateExpiration|date('Y-m-d') : '' }}</strong></p>
            <p>Quantité :<strong class="text-primary h4">{{ products.quantite }}</strong></p>
            
            
          </div>
          
        </div>

        
        <a href="{{ path('stock_proprietaire') }}" class="btn btn-outline-secondary btn-sm" style="width: 135px">Retour à la liste</a>

        <a href="{{ path('produit_edit', {'id': products.id}) }}" class="btn btn-warning btn-sm" style="width: 100px">Modifier</a>

        {{ include('proprietaire/_delete_form.html.twig') }}
        
      </div>
{% endblock %}
