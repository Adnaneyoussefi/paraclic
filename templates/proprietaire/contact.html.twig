{% extends 'proprietaire/base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}


    <div class="site-section">
      <div class="container">
      {% for message in app.flashes('success') %}
                  <div class="alert alert-success" role="success">
                      {{ message }}
                      </div>
              {% endfor %}
        <div class="row">
          <div class="col-md-12">
            <h2 class="h3 mb-5 text-black">Discutez avec nous</h2>
          </div>
          <div class="col-md-12">
    
              {{ form_start(formcontact) }}            
              <div class="p-3 p-lg-5 border">
                <div class="form-group row">
                  <div class="col-md-6">
                  {{ form_row(formcontact.nom, {'label' : 'Nom', 'attr' : {'value' : app.user.nom, 'class' : "form-control"}}) }}
                  </div>
                  <div class="col-md-6">
                  {{ form_row(formcontact.prenom, {'label' : 'Prenom', 'attr' : {'value' : app.user.prenom, 'class' : "form-control"}}) }}
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-md-12">
                  {{ form_row(formcontact.email, {'label' : 'Email', 'attr' : {'value' : app.user.email, 'class' : "form-control"}}) }}
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-md-12">
                  {{ form_row(formcontact.sujet, {'label' : 'Tire', 'attr' : {'placeholder' : 'Titre du sujet', 'class' : "form-control"}}) }}
                  </div>
                </div>
    
                <div class="form-group row">
                  <div class="col-md-12">
                  {{ form_row(formcontact.message, {'label' : 'Message', 'attr' : {'placeholder' : 'Ecrivez votre message de reclamation ici', 'class' : "form-control"}}) }}
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-lg-12">
                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Envoyez">
                  </div>
                </div>
              </div>
            {{ form_end(formcontact)}}
          </div>
          
        </div>
      </div>
    </div>



    <div class="site-section bg-primary">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h2 class="text-white mb-4">Offices</h2>
          </div>
          <div class="col-lg-4">
            <div class="p-4 bg-white mb-3 rounded">
              <span class="d-block text-black h6 text-uppercase">New York</span>
              <p class="mb-0">203 Fake St. Mountain View, San Francisco, California, USA</p>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="p-4 bg-white mb-3 rounded">
              <span class="d-block text-black h6 text-uppercase">London</span>
              <p class="mb-0">203 Fake St. Mountain View, San Francisco, California, USA</p>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="p-4 bg-white mb-3 rounded">
              <span class="d-block text-black h6 text-uppercase">Canada</span>
              <p class="mb-0">203 Fake St. Mountain View, San Francisco, California, USA</p>
            </div>
          </div>
        </div>
      </div>
      
    </div>


    
{% endblock %}