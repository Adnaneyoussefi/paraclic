{% extends 'client/base.html.twig' %}

{% block body %}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
.cards{
display: grid;
 
grid-template-columns: repeat(3, 1fr);
 
grid-auto-rows: auto;
 
grid-gap: 1rem;
}
.card {
 
 width:100%;
padding: .5rem;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 300px;
  margin: auto;
  text-align: center;
  font-family: arial;
}

.title {
  color: grey;
  font-size: 18px;
}

.click {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
}

.social {
  text-decoration: none;
  font-size: 22px;
  color: black;
}

button:hover, a:hover {
  opacity: 0.7;
}
</style>
<br><br>
<center><h1> Les Parapharmacie </h1></center>
<br>
      {{render(controller('App\\Controller\\ClientController::SearchProp'))}}
<br>
<div class="cards">
{% for pharmacies in page %}
      <div class="card">
  <img src="/w3images/team2.jpg" alt="" style="width:100%">
  <center><h3>Parapharmacie<br> {{pharmacies.nomPharmacie}}</h3></center>
  <center><p class="title">{{pharmacies.adresse}}</p></center>
 <center> <p>{{pharmacies.ville}}</p></center>
 <center> <div style="margin: 24px 0;">
    <a class="social" href="#"><i class="fa fa-dribbble"></i></a> 
    <a class="social" href="#"><i class="fa fa-twitter"></i></a>  
    <a class="social" href="#"><i class="fa fa-linkedin"></i></a>  
    <a class="social" href="#"><i class="fa fa-facebook"></i></a> 
  </div></center>
  <p> <a href="{{ path('profile', {'id':pharmacies.id})}}"> <button class="click">Profile</button></a></p>
</div>
{% endfor %}
  
</div>
<br><br>
<div class:"navigation">
              {{ knp_pagination_render(page)}}
              </div>
{% endblock %}